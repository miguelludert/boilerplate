  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./.build",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false
  }
}
